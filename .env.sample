# Trading System Configuration
# Copy this file to .env and update with your values

#######################
# API CREDENTIALS
#######################

# Polygon.io API
POLYGON_API_KEY=your_polygon_api_key
POLYGON_API_BASE_URL=https://api.polygon.io/v2
POLYGON_WS_URL=wss://socket.polygon.io/stocks

# Unusual Whales API
UNUSUAL_WHALES_API_KEY=your_unusual_whales_api_key
UNUSUAL_WHALES_API_BASE_URL=https://api.unusualwhales.com/v1

#######################
# REDIS CONFIGURATION
#######################

# Connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_USE_SSL=false

# Caching
REDIS_CACHE_TTL=3600  # Default TTL in seconds
REDIS_CACHE_PREFIX=trading_system:
REDIS_COMPRESSION_ENABLED=true
REDIS_MAX_CONNECTIONS=10

#######################
# GPU CONFIGURATION
#######################

# General
USE_GPU=true
PREFERRED_DEVICE_ID=0  # Use -1 for auto-selection

# Memory Management
GPU_MEMORY_LIMIT=4096  # MB
GPU_MEMORY_FRACTION=0.8  # Fraction of GPU memory to use

# Precision
GPU_PRECISION=FP32  # Options: FP32, FP16, INT8
TENSORRT_PRECISION=FP16  # Options: FP32, FP16, INT8

#######################
# LOGGING CONFIGURATION
#######################

# General
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGS_DIR=./logs
LOG_FILE_MAX_SIZE=10485760  # 10MB
LOG_FILE_BACKUP_COUNT=5

# Structured Logging
STRUCTURED_LOGGING_ENABLED=true
LOG_FORMAT=json  # Options: json, text

#######################
# METRICS CONFIGURATION
#######################

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

#######################
# PERFORMANCE TUNING
#######################

# Concurrency
MAX_CONCURRENT_REQUESTS=10
MAX_WORKERS=4
THREAD_POOL_SIZE=8

# Timeouts and Retries
DEFAULT_TIMEOUT=30  # seconds
DEFAULT_RETRY_COUNT=3
DEFAULT_RETRY_DELAY=1  # seconds
EXPONENTIAL_BACKOFF=true

# Rate Limiting
API_RATE_LIMIT=5  # requests per second
RATE_LIMIT_WINDOW=1  # seconds

#######################
# DATA PROCESSING
#######################

# Batch Processing
BATCH_SIZE=1000
MAX_BATCH_SIZE=10000

# Caching Strategy
CACHE_MARKET_DATA=true
CACHE_PROCESSED_DATA=true
CACHE_MODEL_RESULTS=true

#######################
# FEATURE TOGGLES
#######################

# Features
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_HISTORICAL_PROCESSING=true
ENABLE_MODEL_OPTIMIZATION=true
ENABLE_ADVANCED_METRICS=true

#######################
# MLFLOW CONFIGURATION
#######################

MLFLOW_TRACKING_URI=http://127.0.0.1:5001 # URI of the MLflow Tracking Server
# MLFLOW_ARTIFACT_ROOT=./mlruns # Optional: Can be set here or via server config